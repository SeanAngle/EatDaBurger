<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devour A Burger!</h2>

<ul>
  {{#each burger}}
    {{#if sleepy}}
      {{> burger/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="TB">Type of Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="hungry">Hungry?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Hungry!<br>
    <input type="radio" name="sleepy" value="0"> Full
  </div>

  <button type="submit">Add Burger</button>
</form>